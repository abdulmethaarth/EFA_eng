<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:id="@+id/header"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardBackgroundColor="#EFEEEE"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:background="#EFEEEE"
            android:layout_margin="@dimen/margin_basic_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/list_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/accessories_box_img"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/teal_200"
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="@font/dosis_extrabold"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$34"/>

            <TextView
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textColor="#ACA7A7"
                android:layout_marginLeft="10dp"
                android:id="@+id/dummy"
                android:textSize="13dp"
                android:fontFamily="@font/dosis_semibold"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "/>

            <!--<TextView
                android:gravity="center_horizontal"
                android:textColor="#959494"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:fontFamily="@font/dosis_semibold"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save 5% more with\n subscribe &amp; save"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_horizontal"
                    android:textColor="#FD5555"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="8dp"
                    android:fontFamily="@font/dosis_semibold"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount 10%"/>

                <TextView
                    android:gravity="center_horizontal"
                   android:layout_marginLeft="5dp"
                    android:id="@+id/price"
                    android:textSize="@dimen/margin_basic_10dp"
                    android:fontFamily="@font/dosis_extrabold"
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="$34"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/count"
                    android:gravity="center_horizontal"
                    android:textColor="#787676"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="8dp"
                    android:fontFamily="@font/dosis_semibold"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available : 15"/>

                <ImageView
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_width="@dimen/font_size_12sp"
                    android:layout_height="@dimen/font_size_12sp"
                    android:src="@drawable/cart_img"
                    android:layout_marginTop="3dp"
                  />

                <ImageView
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_width="@dimen/font_size_13sp"
                    android:layout_height="@dimen/font_size_13sp"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>